<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<TabPane xmlns:fx="http://javafx.com/fxml/1" fx:id="tabPane" maxHeight="-Infinity" maxWidth="-Infinity"
         minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="1006.0"
         tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/23.0.1"
         fx:controller="com.ib.InventoryManagementApplication.controllers.LoginController">
    <tabs>
        <Tab fx:id="loginTab" text="Login">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                    <children>
                        <GridPane alignment="CENTER" prefHeight="572.0" prefWidth="900.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <VBox alignment="CENTER" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                                      prefHeight="572.0" prefWidth="318.0" GridPane.columnIndex="1">
                                    <children>
                                        <Label minHeight="-Infinity" text="Login">
                                            <font>
                                                <Font name="System Bold" size="14.0"/>
                                            </font>
                                        </Label>
                                        <Label text="USERNAME">
                                            <VBox.margin>
                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                            </VBox.margin>
                                        </Label>
                                        <TextField fx:id="usernameField" promptText="Enter username">
                                            <VBox.margin>
                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                            </VBox.margin>
                                            <padding>
                                                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                                            </padding>
                                        </TextField>
                                        <Label text="PASSWORD">
                                            <VBox.margin>
                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                            </VBox.margin>
                                        </Label>
                                        <PasswordField fx:id="passwordField" promptText="Enter password">
                                            <VBox.margin>
                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                            </VBox.margin>
                                            <padding>
                                                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                                            </padding>
                                        </PasswordField>
                                        <ButtonBar buttonMinWidth="80.0">
                                            <buttons>
                                                <Button fx:id="loginButton" mnemonicParsing="false"
                                                        onAction="#handleLogin" prefHeight="26.0" text="Login"/>
                                                <Button fx:id="cancelButtonLoginTab" cancelButton="true"
                                                        mnemonicParsing="false" prefHeight="26.0" prefWidth="150.0"
                                                        text="Cancel"/>
                                            </buttons>
                                            <VBox.margin>
                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                            </VBox.margin>
                                        </ButtonBar>
                                    </children>
                                    <opaqueInsets>
                                        <Insets/>
                                    </opaqueInsets>
                                    <padding>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                                    </padding>
                                </VBox>
                            </children>
                        </GridPane>
                    </children>
                </AnchorPane>
            </content>
        </Tab>
        <Tab fx:id="inventoryTab" disable="true" text="Inventory">
        </Tab>
    </tabs>
</TabPane>
