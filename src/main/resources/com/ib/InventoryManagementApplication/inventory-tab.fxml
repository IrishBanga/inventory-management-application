<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane fx:id="inventoryAnchorPane" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ib.InventoryManagementApplication.controllers.InventoryController">
    <children>
        <VBox alignment="CENTER" prefHeight="600.0" prefWidth="900.0">
            <children>
                <Label fx:id="inventoryTabHeaderLabel" text="Inventory Management (ID)">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="15.0" left="5.0" right="5.0" top="5.0"/>
                    </VBox.margin>
                </Label>
                <VBox prefHeight="378.0" prefWidth="900.0">
                    <children>
                        <TabPane fx:id="partsProductsTabPane" prefHeight="381.0" prefWidth="900.0"
                                 tabClosingPolicy="UNAVAILABLE">
                            <tabs>
                                <Tab fx:id="productsTab" text="Products">
                                    <content>
                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                            <children>
                                                <HBox alignment="CENTER" prefHeight="320.0" prefWidth="900.0">
                                                    <children>
                                                        <VBox alignment="CENTER" prefHeight="292.0" prefWidth="794.0">
                                                            <children>
                                                                <GridPane>
                                                                    <columnConstraints>
                                                                        <ColumnConstraints hgrow="SOMETIMES"
                                                                                           minWidth="10.0"
                                                                                           prefWidth="100.0"/>
                                                                        <ColumnConstraints hgrow="SOMETIMES"
                                                                                           minWidth="10.0"
                                                                                           prefWidth="100.0"/>
                                                                    </columnConstraints>
                                                                    <rowConstraints>
                                                                        <RowConstraints minHeight="10.0"
                                                                                        prefHeight="30.0"
                                                                                        vgrow="SOMETIMES"/>
                                                                    </rowConstraints>
                                                                    <children>
                                                                        <Label text="Products Information">
                                                                            <font>
                                                                                <Font name="System Bold" size="14.0"/>
                                                                            </font>
                                                                        </Label>
                                                                        <TextField fx:id="productSearchTextField"
                                                                                   promptText="Search products by ID or by Name"
                                                                                   GridPane.columnIndex="1"/>
                                                                    </children>
                                                                    <VBox.margin>
                                                                        <Insets bottom="5.0" left="5.0" right="5.0"
                                                                                top="5.0"/>
                                                                    </VBox.margin>
                                                                </GridPane>
                                                                <TableView fx:id="productsTable" prefHeight="264.0"
                                                                           prefWidth="634.0">
                                                                    <columns>
                                                                        <TableColumn fx:id="productIDColumn"
                                                                                     prefWidth="75.0" text="ID"/>
                                                                        <TableColumn fx:id="productNameColumn"
                                                                                     prefWidth="75.0" text="Name"/>
                                                                        <TableColumn fx:id="productInventoryColumn"
                                                                                     prefWidth="75.0"
                                                                                     text="Inventory Level"/>
                                                                        <TableColumn fx:id="productPriceColumn"
                                                                                     prefWidth="75.0"
                                                                                     text="Price per Unit"/>
                                                                    </columns>
                                                                    <columnResizePolicy>
                                                                        <TableView
                                                                                fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                                                    </columnResizePolicy>
                                                                    <VBox.margin>
                                                                        <Insets bottom="5.0" left="5.0" right="5.0"
                                                                                top="5.0"/>
                                                                    </VBox.margin>
                                                                </TableView>
                                                            </children>
                                                            <padding>
                                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                                            </padding>
                                                        </VBox>
                                                        <Separator orientation="VERTICAL" prefHeight="354.0"
                                                                   prefWidth="6.0"/>
                                                        <VBox alignment="CENTER" prefHeight="292.0" prefWidth="382.0"
                                                              spacing="10.0">
                                                            <children>
                                                                <Button fx:id="addProductButton" mnemonicParsing="false"
                                                                        prefWidth="200.0" text="Add"/>
                                                                <Button fx:id="modifyProductButton"
                                                                        mnemonicParsing="false" prefWidth="200.0"
                                                                        text="Modify"/>
                                                                <Button fx:id="deleteProductButton"
                                                                        mnemonicParsing="false" prefWidth="200.0"
                                                                        text="Delete"/>
                                                            </children>
                                                        </VBox>
                                                    </children>
                                                </HBox>
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </Tab>
                                <Tab fx:id="partsTab" text="Parts">
                                    <content>
                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                            <children>
                                                <HBox prefHeight="320.0" prefWidth="900.0">
                                                    <children>
                                                        <VBox alignment="CENTER" prefHeight="292.0" prefWidth="794.0">
                                                            <children>
                                                                <GridPane>
                                                                    <columnConstraints>
                                                                        <ColumnConstraints hgrow="SOMETIMES"
                                                                                           minWidth="10.0"
                                                                                           prefWidth="100.0"/>
                                                                        <ColumnConstraints hgrow="SOMETIMES"
                                                                                           minWidth="10.0"
                                                                                           prefWidth="100.0"/>
                                                                    </columnConstraints>
                                                                    <rowConstraints>
                                                                        <RowConstraints minHeight="10.0"
                                                                                        prefHeight="30.0"
                                                                                        vgrow="SOMETIMES"/>
                                                                    </rowConstraints>
                                                                    <children>
                                                                        <Label text="Parts Information">
                                                                            <font>
                                                                                <Font name="System Bold" size="14.0"/>
                                                                            </font>
                                                                        </Label>
                                                                        <TextField fx:id="partSearchTextField"
                                                                                   promptText="Search parts by ID or by Name"
                                                                                   GridPane.columnIndex="1"/>
                                                                    </children>
                                                                    <VBox.margin>
                                                                        <Insets bottom="5.0" left="5.0" right="5.0"
                                                                                top="5.0"/>
                                                                    </VBox.margin>
                                                                </GridPane>
                                                                <TableView fx:id="partsTable" prefHeight="264.0"
                                                                           prefWidth="634.0">
                                                                    <columns>
                                                                        <TableColumn fx:id="partIDColumn"
                                                                                     prefWidth="75.0" text="ID"/>
                                                                        <TableColumn fx:id="partNameColumn"
                                                                                     prefWidth="75.0" text="Name"/>
                                                                        <TableColumn fx:id="partInventoryColumn"
                                                                                     prefWidth="75.0"
                                                                                     text="Inventory Level"/>
                                                                        <TableColumn fx:id="partPriceColumn"
                                                                                     prefWidth="75.0"
                                                                                     text="Price per Unit"/>
                                                                    </columns>
                                                                    <columnResizePolicy>
                                                                        <TableView
                                                                                fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                                                    </columnResizePolicy>
                                                                    <VBox.margin>
                                                                        <Insets bottom="5.0" left="5.0" right="5.0"
                                                                                top="5.0"/>
                                                                    </VBox.margin>
                                                                </TableView>
                                                            </children>
                                                            <padding>
                                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                                            </padding>
                                                        </VBox>
                                                        <Separator orientation="VERTICAL" prefHeight="200.0"/>
                                                        <VBox alignment="CENTER" prefHeight="292.0" prefWidth="382.0"
                                                              spacing="10.0">
                                                            <children>
                                                                <Button fx:id="addPartButton" mnemonicParsing="false"
                                                                        prefWidth="200.0" text="Add"/>
                                                                <Button fx:id="modifyPartButton" mnemonicParsing="false"
                                                                        prefWidth="200.0" text="Modify"/>
                                                                <Button fx:id="deletePartButton" mnemonicParsing="false"
                                                                        prefWidth="200.0" text="Delete"/>
                                                            </children>
                                                        </VBox>
                                                    </children>
                                                </HBox>
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </Tab>
                            </tabs>
                        </TabPane>
                    </children>
                </VBox>
                <VBox alignment="CENTER">
                    <children>
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Button fx:id="readFromFileButton" mnemonicParsing="false" prefWidth="128.0"
                                        text="Load Data from File"/>
                                <Button fx:id="saveToFileButton" mnemonicParsing="false" prefWidth="128.0"
                                        text="Save Data To File"/>
                            </children>
                            <VBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </VBox.margin>
                        </HBox>
                        <HBox alignment="CENTER" layoutX="15.0" layoutY="15.0" spacing="10.0">
                            <children>
                                <Button fx:id="readFromDBButton" mnemonicParsing="false" prefWidth="128.0"
                                        text="Load Data from DB"/>
                                <Button fx:id="saveToDBButton" mnemonicParsing="false" prefWidth="128.0"
                                        text="Write Data on DB"/>
                            </children>
                            <VBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0"/>
                            </VBox.margin>
                        </HBox>
                        <HBox alignment="CENTER" layoutX="15.0" layoutY="15.0" spacing="10.0">
                            <children>
                                <Button fx:id="exitButton" mnemonicParsing="false" onAction="#closeWindow"
                                        prefHeight="26.0" prefWidth="128.0" text="Exit"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
